{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#btnMinus').click(function () {
            var count = parseInt($('#txtCount').val());
            if (count > 1)
                $('#txtCount').val(--count);
        })

        $('#btnPlus').click(function () {
            var count = parseInt($('#txtCount').val());
            $('#txtCount').val(++count);
        })

    });
</script>
{{/section}}


